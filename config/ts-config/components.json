{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false
  }
}
